<%- include('../../partials/head.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <%- include('../../partials/sidebar.ejs') %>
            </div>

            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-10 mx-5 my-5">
                        <div class=" card card-body">
                            <h5  class="text-center">List Of Your Bookmarks</h5>
                            <div class="row">
                                <% if(posts.length===0) { %>
                                    <div class="text-center text-muted my-3 mx-3" >
                                        <p>You didn't Bookmarked any Posts.</p>
                                    </div>
                                    <% }else{ %>
                                        <% for (let post of posts.reverse()) {%>
                                            <div class="card col-sm-3 my-3 mx-3">
                                            
                                                    <img src="<%= post.thumbnail %> " alt="<%= post.title%>"
                                                    class="card-img-top mt-3" style="width: 100%; height: 15vw; object-fit: cover;">
                                                   
                                                    <div class="card-body mt-2">
                                                      <a href="/explorer/<%= post._id%>" style="color:#222">
                                                            <p><%=post.title%></p>
                                                        </a>
                                                    </div>
                                            </div>
                                        <% } %>
                                     <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../partials/footer.ejs') %>
        </body>

        </html>