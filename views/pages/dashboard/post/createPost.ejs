<%- include('../../../partials/head.ejs') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.css">

    <div class="container-fluid">

      <div class="row">

            <div class="col-md-2">
                <%- include('../../../partials/sidebar.ejs') %> 
            </div>

             <div class="col-md-10">
                    <div  class="row">
                        <div class="col-md-10 mx-5 my-5">
                            <div class="card card-body">
                                                        <h5 class=" text-center">Create Post</h5>
                        <form action="/posts/create" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="title"> Enter Your Post Title </label>
                                    <input type="text" name="title" id="title" class="form-control <%= error.title ? 'is-invalid' : ' ' %>" value="<%= value.title ? value.title : ' ' %> ">
                                    <div class="invalid-feedback">
                                            <%= error.title %> 
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="tiny-mce-post-body">Enter Your Post Body</label>
                                    <textarea name="body" id="tiny-mce-post-body" class="form-control <%= error.body ? 'is-invalid' : ' ' %>"> <%= value.body ? value.body : ' ' %> </textarea>
                                    <div class="invalid-feedback">
                                        <%= error.body %> 
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="tags"> Enter Some Tags(Max 10) </label>
                                    <input type="text" name="tags" id="tags" placeholder="tag1, tag2, tag3" class="form-control <%= error.tags ? 'is-invalid' : ' ' %>" value="<%= value.tags ? value.tags : ' ' %> ">
                                </div>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">Upload</span>
                                    </div>
                                    <div class="custom-file">
                                        <input type="file" name="post-thumbnail" class="custom-file-input" id="inputGroupFile">
                                        <label for="inputGroupFile" class="custom-file-label"> Choose File</label>
                                    </div>
                                </div>
                                   <div class="d-flex justify-content-center">
                                    <input type="submit" class="btn btn-outline-success" value="Create Post">
                              </div>
                        </form>
                        
                             </div>
                        </div>
                    </div>
            </div>
      </div>

    </div>

<%- include('../../../partials/footer.ejs') %>
//tinyMCE link
<script src="https://cdn.tiny.cloud/1/upzprte8zafdeoq8r95deqljra0945o4smeuhk53juv1kqf3/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script src="/script/tinyMCE.js"></script>

// change the name of chose file appear on select
    <script>
        $('#inputGroupFile').on('change', function(e){
            let filename = e.target.files[0].name
            $(this).next('.custom-file-label').html(filename)
        })
    </script>
 </body>
  </html>